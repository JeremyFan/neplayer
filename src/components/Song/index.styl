@import '../../styl/functions'

.song
  display flex
  height 50px
  padding 5px 15px
  transition all .2s linear
  font-size 1.4rem
  &:hover
    background-color rgba(0,0,0,0.1)
    cursor default
    
  &.active
    background-color rgba(0,0,0,0.1)
    color #adff2f

  &:hover
  &.active
    .song-index
      .index
        opacity 0
      .play
        display block

  .song-index
    position relative
    width 30px
    height 30px
    line-height 32px
    .index
      opacity 0.7
    .play
      position absolute
      top 5px
      // left -3px
      display none
      width 1.2em
      height 1.2em

  .song-info
    flex 1
    width 0

    .name
      height 30px
      line-height 30px
      font-size 1.14em
      text-overflow()

    .more
      height 20px
      line-height 20px
      opacity .7
      text-overflow()
      .split
        margin 0 6px
    
  .song-duration
    height 30px
    line-height 30px