@import '../../styl/functions.styl'

.bar
  position fixed
  left 0
  bottom 0
  display flex
  flex-direction row
  width 100%
  height 70px
  background rgba(0,0,0,.15)
  // background rgba(0,139,139,.8)
  // background dodgerblue
  // background linear-gradient(105deg,#008b8b,dodgerblue)
  .info
    width 40%
    .pic
      float left
      width 70px
      height 70px
      margin-right 10px

    .title
      font-size 1.2em
      margin 15px 0
      text-overflow()

    .desc
      opacity .75
      text-overflow()
  
  .controls
    display flex
    justify-content center
    align-items center
    width 20%
    min-width 200px
    .play
      width 3em
      height 3em
      margin 0 3em
    .pause
      width 3em
      height 3em

    .prev
    .next
      width 2em
      height 2em
  
  .more
    display flex
    justify-content flex-end
    align-items center
    width 40%

    .mode
      width 2em
      height 2em
      margin-right 1em
    .volume
      width 2em
      height 2em
    .volume-progress
      width 5em
      height 3px
      background rgba(255,255,255,0.1)
      &::-webkit-progress-bar
        background rgba(255,255,255,0.1)

      &::-webkit-progress-value
        background #eee
    
    .time
      margin 0 1em