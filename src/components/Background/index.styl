.great-bg
  z-index -1
  position fixed
  top 0
  width 100%
  height 100%
  overflow hidden

  .bg-image
    width 100%
    opacity 0
    
    &.in
      transition opacity 2s ease-in-out
      opacity 1

  .bg-gradient
    &:before,
    &:after
      content ""
      position fixed
      top 0
      width 100%
      height 100%
    &:before
      // background linear-gradient(45deg,#9b00dc,#224099)
      background linear-gradient(15deg,#009,#06f)
      opacity .9

    &:after
      // background radial-gradient(ellipse at center,#00adee 0,#224099 100%)
      background radial-gradient(ellipse at center,#09f 0,#06f 100%)
      opacity .5

    .test
      color #9b00dc
      color #224099

      color #00adee 
      color #224099